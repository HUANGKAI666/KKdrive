<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:padding="3dp"
            android:id="@+id/id_select_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/type_name"
            android:text="单选题"
            />
        <TextView
            android:id="@+id/id_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/blank"

            />
    </LinearLayout>

        <ImageView
            android:id="@+id/id_question_img"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />

    <LinearLayout
    android:id="@+id/id_itme1"
        android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/id_itme1_img1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/a"

        />

    <TextView
        android:id="@+id/id_itme1_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blank"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        />
</LinearLayout>
    <LinearLayout
        android:id="@+id/id_itme2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/id_itme1_img2"
            android:layout_width="25dp"
            android:layout_height="25dp"
android:background="@drawable/b"
            />

        <TextView
            android:id="@+id/id_itme2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_itme3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/id_itme1_img3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/c"

            />

        <TextView
            android:id="@+id/id_itme3_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_itme4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/id_itme1_img4"
            android:layout_width="25dp"
            android:layout_height="25dp"
android:background="@drawable/d"

            />

        <TextView
            android:id="@+id/id_itme4_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blank"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <include layout="@layout/seeanswer"/>
    <include layout="@layout/detailed"/>

</LinearLayout>
